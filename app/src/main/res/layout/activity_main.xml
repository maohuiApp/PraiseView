<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moly.hooyee.praiseview.MainActivity">

    <com.moly.hooyee.praise.PraiseView
        android:layout_centerInParent="true"
        android:id="@+id/pv_praise"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.moly.hooyee.praise.RecordView
        android:id="@+id/rv_record"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pv_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/rv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_add"
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_reduce"
            android:text="-1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
